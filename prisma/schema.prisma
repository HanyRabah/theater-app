generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Seat {
  id        Int      @id @default(autoincrement())
  row       String
  number    Int
  section   String
  block     String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([row, number, section, block], name: "row_number_section_block")
}